<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.kma.securechatapp.utils.misc.CircularImageView
        android:id="@+id/suggest_avatar"
        android:src="@drawable/circle_green"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/conversation_online"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/suggest_avatar"
        android:layout_alignRight="@+id/suggest_avatar"
        android:layout_alignBottom="@+id/suggest_avatar"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/circle_green"
        android:gravity="right" />
</RelativeLayout>